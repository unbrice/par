<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:Grid>
		<g:row>
			<g:customCell>
				<g:Label text="Title" />
			</g:customCell>
			<g:customCell>
				<g:TextBox ui:field="titleBox" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="Text" />
			</g:customCell>
			<g:customCell>
				<g:TextBox ui:field="textBox" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label/>
			</g:customCell>
			<g:customCell>
				<g:Button styleName="{style.important}" ui:field="sendButton" text="OK" />
			</g:customCell>
		</g:row>
	</g:Grid>
</ui:UiBinder> 